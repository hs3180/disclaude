{
  "name": "disclaude",
  "version": "0.2.2",
  "description": "Multi-platform agent bot supporting Feishu/Lark and CLI",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "disclaude": "./dist/cli-entry.js"
  },
  "files": [
    "dist",
    "skills",
    "package.json"
  ],
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "cli": "tsx src/index.ts",
    "build": "tsup",
    "type-check": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "pm2:start": "npm run build && pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop disclaude-feishu",
    "pm2:restart": "pm2 restart disclaude-feishu",
    "pm2:reload": "pm2 reload disclaude-feishu",
    "pm2:logs": "pm2 logs disclaude-feishu",
    "pm2:status": "pm2 status",
    "pm2:delete": "pm2 delete disclaude-feishu",
    "pm2:monit": "pm2 monit"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.19",
    "@anthropic-ai/sdk": "^0.32.0",
    "@larksuiteoapi/node-sdk": "^1.34.0",
    "@playwright/mcp": "^0.0.61",
    "dotenv": "^16.4.7",
    "js-yaml": "^4.1.1",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "pino-roll": "^4.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.5",
    "@types/pino": "^7.0.4",
    "@types/pino-pretty": "^4.7.5",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.17.0",
    "pm2": "^6.0.14",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.1",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
